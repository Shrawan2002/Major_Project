<div class="card-body listing-details">
  <p class="listing-description"><%= listing.description %></p>

  <p class="listing-price">
    <span class="currency-symbol">â‚¹</span>
    <span class="price-amount">
      <%= Number(listing.price).toLocaleString("en-IN") %>
    </span>
    <span class="per-night">night</span>
  </p>

  <p class="listing-location">
    <i class="bi bi-geo-alt"></i> <%= listing.location %>, <%= listing.country %>
  </p>
</div>


</div>
<div class="btns mb-3">
    <a href="/listings/<%= listing._id %>/edit"
        class="btn btn-dark edit-btn col-1 offset-3" >
        Edit 
    </a>

    <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
        <button class="btn btn-dark offset-4 ">Delete</button>  
    </form>
</div> 
<hr>
<div class="col-8 offset-3 mb-2">
  <h4>Leave a Review</h4>
  <form method="POST" action="/listings/<%= listing.id %>/reviews" novalidate class="needs-validation">
    <div class="mb-3 mt-3">
      <label for="rating" class="form-label">Rating</label>
      <input type="range" min="1" max="5" id="rating" name="review[rating]" class="form-range" >
    </div>
    <div  class="mb-3 mt-3">
      <label for="comment" class="form-label">Comment</label>
      <textarea name="review[comment]"id="comment",cols="20"rows="5"class="form-control"required></textarea>
      <div class="invalid-feedback">Please add Some Comments for review</div>
    </div>
    <button class="btn btn-outline-dark">Submit</button>
  </form>
</div>
</div>















