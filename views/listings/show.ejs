
<% layout("/layouts/boilerplate") %>
 
<div class="row">
    <div class="col-8 offset-2">
         <h3>Listing Details :</h3>
 <div class="card" style="width: 18rem;">
  <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="listing_image">
  <div class="card-body">
    <p class="card-text">
        <%= listing.title %>
        <li><%= listing.description %></li>
        <li><%= Number(listing.price).toLocaleString("en-IN",{style: "currency", currency: "INR"}) %></li>
        <!-- <li>&#8377;<%= Number(listing.price).toLocaleString("en-IN") %></li> -->
        <li><%= listing.location %></li>
        <li><%= listing.country %></li>
    </p>
  </div>
</div>
  <br>
  <a href="/listings/<%= listing._id %>/edit">Edit This Listing</a>
  <br />
    <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
        <button>Delete This Listing</button>  
    </form>
    </div>
</div>















